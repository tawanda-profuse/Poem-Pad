<html lang="en">
<%- include("../partials/head.ejs") %>

<body>
  <%- include("../partials/nav.ejs") %>

  <div class="blogs content">
    <h1>All Poems</h1>
    <br>
    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <a class="single" href="/poems/<%= blog._id %>">
          <h3 class="title"><%= blog.title %><span> ~ <%= blog.username %> </span></h3>
          <p class="snippet"><%= blog.snippet %></p>
        </a>
        <br>
      <% }) %>
    <% } else { %>
      <h3>There are no poems to display...</h3>
    <% } %>
    
  </div>

  <%- include("../partials/footer.ejs") %>
</body>
</html>